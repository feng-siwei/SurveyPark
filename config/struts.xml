<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 主题 -->
	<constant name="struts.ui.theme" value="simple"></constant>
	<!-- 开发模式 -->
	<constant name="struts.devMode" value="true"></constant>
	
    <package name="survayParkPkg" extends="struts-default">
    	<!-- 拦截器 -->
		<interceptors>
			<!-- 注册自定义登入拦截器 -->
			<interceptor name="loginLnterceptor" class="com.feng.surveypark.struts2.interceptor.LoginLnterceptor"></interceptor>		
			<!-- 自定义拦截器栈 -->
			<interceptor-stack name="surveyParkStack">
				<interceptor-ref name="loginLnterceptor"/>
				<interceptor-ref name="defaultStack"/>
			</interceptor-stack>
		</interceptors>
		<!-- 定义默认栈 -->
		<default-interceptor-ref name="surveyParkStack"/>
		
		<!-- 全局结果 -->
		<global-results>
			<result name="login">/index.jsp</result>
		</global-results>
		
		
 		<!-- 注册Action -->
 		<action name="RegAction_*" class="regAction" method="{1}">
 			<result name = "regPage">/reg.jsp</result>
 			<result name = "success">/index.jsp</result>
 			<result name = "input">/reg.jsp</result>		
 		</action>
 		<!-- 登入Action -->
 		<action name="LoginAction_*" class="loginAction" method="{1}">
 			<result name = "longinPage">/index.jsp</result>
 			<result name = "success">/index.jsp</result>
 			<result name = "input">/index.jsp</result>			
 		</action>
 		<!-- 调查Action -->
 		<action name="SurveyAction_*" class="surveyAction" method="{1}">
 			<result name = "designSurveyPage">/designSurveyPage.jsp</result>
 			<result name = "mySurveyListPage">/mySurveyList.jsp</result>
 					
 		</action>
 		
    </package>
</struts>